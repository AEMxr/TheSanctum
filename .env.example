# Shared
SANCTUM_ENV=local
SANCTUM_API_KEY=dev-local-key
SANCTUM_ADMIN_API_KEY=dev-local-key

# Language API
LANGUAGE_API_HOST=127.0.0.1
LANGUAGE_API_PORT=8081
LANGUAGE_API_BASE_URL=http://127.0.0.1:8081
LANGUAGE_API_MAX_REQUEST_BYTES=65536
LANGUAGE_API_REQUEST_TIMEOUT_MS=15000
LANGUAGE_API_RATE_LIMIT_MAX_REQUESTS=60
LANGUAGE_API_RATE_LIMIT_WINDOW_SECONDS=60
LANGUAGE_API_IDEMPOTENCY_TTL_SECONDS=300
LANGUAGE_API_USAGE_LEDGER_PATH=apps/api/artifacts/usage/language_api_usage.jsonl

# Marketing/Revenue API
REVENUE_API_HOST=127.0.0.1
REVENUE_API_PORT=8082
REVENUE_API_BASE_URL=http://127.0.0.1:8082
REVENUE_API_MAX_REQUEST_BYTES=131072
REVENUE_API_REQUEST_TIMEOUT_MS=20000
REVENUE_API_RATE_LIMIT_MAX_REQUESTS=120
REVENUE_API_RATE_LIMIT_WINDOW_SECONDS=60
REVENUE_API_IDEMPOTENCY_TTL_SECONDS=300
REVENUE_API_USAGE_LEDGER_PATH=apps/revenue_automation/artifacts/usage/revenue_api_usage.jsonl

# Revenue runtime behavior
REVENUE_ENABLE_AUTOMATION=true
REVENUE_PROVIDER_MODE=mock
REVENUE_SAFE_MODE=true
REVENUE_DRY_RUN=true

# Example staging/prod overrides
# SANCTUM_ENV=staging
# SANCTUM_API_KEY=<replace>
# SANCTUM_ADMIN_API_KEY=<replace>
# LANGUAGE_API_HOST=0.0.0.0
# REVENUE_API_HOST=0.0.0.0
# REVENUE_PROVIDER_MODE=http
